        },
        "emoji": {
          "type": "string",
          "minLength": 1,
          "maxLength": 4
        },
        "ttl_seconds": {
          "type": [
            "integer",
            "null"
          ],
          "minimum": 1
        }
      }
    },
    "message": {
      "type": "string",
      "minLength": 1,
      "maxLength": 360
