{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tagers.com/schemas/sentiment_result.schema.json",
  "title": "SentimentResult",
  "type": "object",
  "required": [
    "sentiment",
    "confidence",
    "signals",
    "recommended_action",
    "notes"
  ],
  "properties": {
    "sentiment": {
      "type": "string",
      "enum": [
        "POSITIVE",
        "NEUTRAL",
        "NEGATIVE_LOW",
        "NEGATIVE_HIGH"
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "signals": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2
      },
      "minItems": 0,
      "maxItems": 8
    },
    "recommended_action": {
      "type": "string",
      "enum": [
        "NORMAL",
        "ESCALATE_MANAGER",
        "ASK_BRANCH",
        "OFFER_CALLBACK"
      ]
    },
    "notes": {
      "type": [
        "string",
        "null"
      ],
      "maxLength": 300
    }
  },
  "additionalProperties": false
}
