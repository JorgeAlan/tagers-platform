# ═══════════════════════════════════════════════════════════════════════════
# LUCA API - Environment Variables
# ═══════════════════════════════════════════════════════════════════════════
# Copia este archivo a .env y completa los valores

# Environment
NODE_ENV=development

# Server
LUCA_PORT=3001

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/tagers

# Redis (Railway Redis)
REDIS_URL=redis://localhost:6379

# OpenAI
OPENAI_API_KEY=sk-...

# LangSmith (Observability)
LANGSMITH_ENABLED=false
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=tagers-luca

# Chatwoot (Para notas privadas)
CHATWOOT_ENABLED=false
CHATWOOT_BASE_URL=https://app.chatwoot.com
CHATWOOT_API_ACCESS_TOKEN=
CHATWOOT_ACCOUNT_ID=

# WhatsApp Business API (Para briefings y alertas)
WHATSAPP_ENABLED=false
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=

# LUCA Notifications
LUCA_JORGE_WHATSAPP=+521234567890
LUCA_GROUP_WHATSAPP=

# LUCA Features
LUCA_BRIEFING_ENABLED=true
LUCA_BRIEFING_CRON=0 8 * * *
LUCA_TIMEZONE=America/Mexico_City
LUCA_DETECTORS_ENABLED=true

# Control Tower
LUCA_TOWER_ENABLED=true
LUCA_JWT_SECRET=change-me-in-production

# Redshift (Data Warehouse) - Optional
REDSHIFT_ENABLED=false
REDSHIFT_HOST=
REDSHIFT_PORT=5439
REDSHIFT_DATABASE=
REDSHIFT_USER=
REDSHIFT_PASSWORD=

# CORS
LUCA_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002
